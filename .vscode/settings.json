{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "typescript.preferences.indentSize": 4,
    "javascript.preferences.indentSize": 4,
    "json.format.insertSpaceAfterCommaDelimiter": true,
    "json.format.insertSpaceAfterSemicolonInForStatements": true,
    "json.format.insertSpaceBeforeAndAfterBinaryOperators": true,
    "json.format.insertSpaceAfterConstructor": true,
    "json.format.insertSpaceAfterKeywordsInControlFlowStatements": true,
    "json.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "json.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
    "json.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
    "json.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
    "json.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": false,
    "json.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": false,
    "json.format.placeOpenBraceOnNewLineForFunctions": false,
    "json.format.placeOpenBraceOnNewLineForControlBlocks": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true
}