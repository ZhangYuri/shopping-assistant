# Docker Environment Configuration for Shopping Assistant System
# Copy this file to .env and update the values for your environment

# Application Settings
NODE_ENV=production
LOG_LEVEL=info
PORT=3000

# LangChain/DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Database Configuration (Docker MySQL)
DATABASE_HOST=mysql
DATABASE_PORT=3306
DATABASE_NAME=shopping_assistant
DATABASE_USER=root
DATABASE_PASSWORD=your_secure_password_here
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# Cache Configuration (Docker Redis)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PORT=6379

# File Storage Configuration
FILE_STORAGE_PATH=/app/storage/files
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,xlsx,xls

# OCR Service Configuration
OCR_SERVICE_URL=http://localhost:8080/ocr
OCR_API_KEY=your_ocr_api_key_here

# Notification Configuration
# Microsoft Teams
TEAMS_WEBHOOK_URL=your_teams_webhook_url_here

# DingTalk
DINGTALK_WEBHOOK_URL=your_dingtalk_webhook_url_here
DINGTALK_SECRET=your_dingtalk_secret_here

# WeChat Work
WECHAT_WORK_WEBHOOK_URL=your_wechat_work_webhook_url_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
ENCRYPTION_KEY=your_encryption_key_here_change_in_production

# Agent Configuration
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT=300000
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1000

# Workflow Configuration
WORKFLOW_TIMEOUT=600000
WORKFLOW_MAX_STEPS=100
WORKFLOW_CHECKPOINT_INTERVAL=10
