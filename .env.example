# Shopping Assistant System Environment Configuration

# Application Settings
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# LangChain/DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/shopping_assistant
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# Cache Configuration (Redis)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# File Storage Configuration
FILE_STORAGE_PATH=./storage/files
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,xlsx,xls

# OCR Service Configuration
OCR_SERVICE_URL=http://localhost:8080/ocr
OCR_API_KEY=your_ocr_api_key_here

# Notification Configuration
# Microsoft Teams
TEAMS_WEBHOOK_URL=your_teams_webhook_url_here

# DingTalk
DINGTALK_WEBHOOK_URL=your_dingtalk_webhook_url_here
DINGTALK_SECRET=your_dingtalk_secret_here

# WeChat Work
WECHAT_WORK_WEBHOOK_URL=your_wechat_work_webhook_url_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# MCP Server Configuration
MCP_DATABASE_URL=http://localhost:3001
MCP_FILE_STORAGE_URL=http://localhost:3002
MCP_CACHE_URL=http://localhost:3003
MCP_NOTIFICATION_URL=http://localhost:3004

# Agent Configuration
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT=300000
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1000

# Workflow Configuration
WORKFLOW_TIMEOUT=600000
WORKFLOW_MAX_STEPS=100
WORKFLOW_CHECKPOINT_INTERVAL=10