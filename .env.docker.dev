# Docker Development Environment Configuration
# Copy this file to .env for development environment

# Application Settings
NODE_ENV=development
LOG_LEVEL=debug
PORT=3000

# LangChain/DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Database Configuration (Docker MySQL Dev)
DATABASE_HOST=mysql
DATABASE_PORT=3306
DATABASE_NAME=shopping_assistant_dev
DATABASE_USER=root
DATABASE_PASSWORD=dev_password_123
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=30000

# Cache Configuration (Docker Redis Dev)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_PORT=6379

# File Storage Configuration
FILE_STORAGE_PATH=/app/storage/files
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,xlsx,xls

# OCR Service Configuration
OCR_SERVICE_URL=http://localhost:8080/ocr
OCR_API_KEY=dev_ocr_key

# Notification Configuration (Development)
# Microsoft Teams (use test webhook)
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/test

# DingTalk (use test webhook)
DINGTALK_WEBHOOK_URL=https://oapi.dingtalk.com/robot/send?access_token=test
DINGTALK_SECRET=test_secret

# WeChat Work (use test webhook)
WECHAT_WORK_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=test

# Email Configuration (Development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=dev@example.com
SMTP_PASS=dev_password

# Security Configuration (Development - NOT for production)
JWT_SECRET=dev_jwt_secret_not_for_production
ENCRYPTION_KEY=dev_encryption_key_not_for_production

# Agent Configuration (Development)
MAX_CONCURRENT_TASKS=3
TASK_TIMEOUT=60000
RETRY_MAX_ATTEMPTS=2
RETRY_BASE_DELAY=500

# Workflow Configuration (Development)
WORKFLOW_TIMEOUT=120000
WORKFLOW_MAX_STEPS=50
WORKFLOW_CHECKPOINT_INTERVAL=5
